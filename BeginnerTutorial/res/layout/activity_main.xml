<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/welcome" />

    <!-- Learn Android Tutorial 1.18 Scroll View -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="210dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/radioViewButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Radio Buttons"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/listViewButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="List View"
                android:textSize="25dp" />

            <Button
                android:id="@+id/imageViewButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Image View"
                android:textSize="25dp" />

            <Button
                android:id="@+id/customViewButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Custom View"
                android:textSize="25dp" />

            <Button
                android:id="@+id/surfaceViewButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="SurfaceViewButton"
                android:textSize="25dp" />

            <Button
                android:id="@+id/tutorial6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Button 6"
                android:textSize="25dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>